<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syahdeini.quizapp.expInitialActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:minHeight="178dp"
                android:minWidth="100dp"
                app:srcCompat="@mipmap/ic_launcher" />
         <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="PROMEMO"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal"
                    android:gravity="center"
                    android:text="Android framework app for prospective memory experiment"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_blue_dark" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/buttonSetExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set experiment properties"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="33dp" />

        <Button
            android:id="@+id/buttonDoExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Experiment"
            tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="97dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
